<?xml version="1.0"?>
<p:PGroup xmlns:fx="http://ns.adobe.com/mxml/2009"
          xmlns:s="library://ns.adobe.com/flex/spark"
          width="100%"
          height="100%" xmlns:p="*">

    <fx:Script><![CDATA[
        import st.Player;

        [Inject]
        [Bindable]
        public var player:Player;
        ]]></fx:Script>

    <s:BitmapImage source="{ImageLib.PLANET_1}" left="150" verticalCenter="0" />

    <s:VGroup top="30" right="30">
        <s:Label text="cash {player.cashNow}" />
        <s:Label text="debt {player.borrowed}" />
        <s:Label text="profit {player.profit}" />
    </s:VGroup>

    <!-- bottom -->

    <s:Group height="38" width="100%" bottom="0">
        <s:Rect width="100%" height="100%">
            <s:fill>
                <s:SolidColor color="white" alpha="0.1" />
            </s:fill>
        </s:Rect>

        <s:HGroup width="50%" gap="0" height="100%" verticalAlign="middle" left="30">
            <s:Button label="Financials" styleName="btnNav" />
            <s:Button label="Ships Management" styleName="btnNav" />
            <s:Button label="Planets" styleName="btnNav" />
            <s:Button label="Traderoutes" styleName="btnNav" />
        </s:HGroup>

        <s:HGroup width="50%" gap="0" height="100%" verticalAlign="middle" right="30" layoutDirection="rtl">
            <s:Button label="How to Play" styleName="btnNav" />
            <s:Button label="Notifications" styleName="btnNav" />
        </s:HGroup>

    </s:Group>

</p:PGroup>
