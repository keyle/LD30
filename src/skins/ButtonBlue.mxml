<?xml version="1.0" encoding="utf-8"?>
<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009"
        xmlns:s="library://ns.adobe.com/flex/spark"
        minWidth="180" height="50">
    <fx:Metadata>
    <![CDATA[
        [HostComponent("spark.components.Button")]
        ]]>
    </fx:Metadata>

    <!-- states -->
    <s:states>
        <s:State name="disabled" />
        <s:State name="down" />
        <s:State name="over" />
        <s:State name="up" />
    </s:states>

    <s:Rect top="0" left="0" right="0" bottom="0">
        <s:fill>
            <s:SolidColor color="#3391a5" color.over="#49afc5" />
        </s:fill>
    </s:Rect>

    <s:Label id="labelDisplay" color="white" height="100%"
             verticalAlign="middle" width="100%" textAlign="center" fontSize="18" />

</s:Skin>
